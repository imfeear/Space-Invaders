<Window x:Class="SpaceInvaders.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Space Invaders" Height="600" Width="800"
        KeyDown="Window_KeyDown" KeyUp="Window_KeyUp">

    <Grid>
        <!-- Camada do Canvas para o jogo -->
        <Canvas Name="GameCanvas" Background="Black" >
        </Canvas>

        <!-- Score -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="10,10,0,0">
            <TextBlock Text="Score: "
                       Foreground="White"
                       FontSize="20"
                       FontWeight="Bold" />
            <TextBlock Foreground="DarkGreen"
                       FontSize="20"
                       FontWeight="Bold"
                       Text="{Binding State.Score}" />
        </StackPanel>

        <!-- Vidas -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,10,10,0">
            <TextBlock Text="Vidas: "
                       Foreground="White"
                       FontSize="20"
                       FontWeight="Bold" />
            <TextBlock Foreground="White"
                       FontSize="20"
                       FontWeight="Bold"
                       Text="{Binding State.Lives}" />
        </StackPanel>

        <!-- Mensagem de fim de jogo -->
        <TextBlock x:Name="MessageBox"
                   Foreground="White"
                   FontSize="40"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Visibility="Hidden"
                   TextAlignment="Center"
                   Width="400" 
                   />
        
        <StackPanel x:Name="EndGameOptionsPanel" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Collapsed">
            <TextBlock Text="Game Over!" FontSize="36" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="10"/>
            <TextBlock Text="{Binding State.Score, StringFormat='Your Score: {0}'}" FontSize="24" Foreground="White" HorizontalAlignment="Center" Margin="10"/>
            <Button Content="Continue Playing" FontSize="20" Width="200" Height="50" Margin="5" Click="ContinuePlayingButton_Click"/>
            <Button Content="Back to Main Menu" FontSize="20" Width="200" Height="50" Margin="5" Click="BackToMenuButton_Click"/>
            <Button Content="Exit" FontSize="20" Width="200" Height="50" Margin="5" Click="ExitButton_Click"/>
        </StackPanel>

        
    </Grid>
</Window>
