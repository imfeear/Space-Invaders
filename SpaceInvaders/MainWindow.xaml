<Window x:Class="SpaceInvaders.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Space Invaders" Height="600" Width="800"
        KeyDown="Window_KeyDown" KeyUp="Window_KeyUp">

    <Grid>
        <!-- Camada do Canvas para o jogo -->
        <Canvas Name="GameCanvas" Background="Black" />

        <!-- Score -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="10,10,0,0">
            <TextBlock Text="Score: "
                       Foreground="White"
                       FontSize="20"
                       FontWeight="Bold" />
            <TextBlock Foreground="White"
                       FontSize="20"
                       FontWeight="Bold"
                       Text="{Binding State.Score}" />
        </StackPanel>

        <!-- Vidas -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,10,10,0">
            <TextBlock Text="Vidas: "
                       Foreground="White"
                       FontSize="20"
                       FontWeight="Bold" />
            <TextBlock Foreground="White"
                       FontSize="20"
                       FontWeight="Bold"
                       Text="{Binding State.Lives}" />
        </StackPanel>

        <!-- Mensagem de fim de jogo -->
        <TextBlock x:Name="MessageBox"
                   Foreground="White"
                   FontSize="40"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Visibility="Hidden"
                   TextAlignment="Center"
                   Width="400" 
                   />

        <!-- Botão para reiniciar -->
        <Button x:Name="RestartButton"
                Content="Reiniciar"
                FontSize="20"
                FontWeight="Bold"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Visibility="Hidden"
                Padding="10,5"
                Click="RestartButton_Click" />
    </Grid>
</Window>
