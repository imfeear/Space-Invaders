<Window x:Class="SpaceInvaders.PlayerNameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Player Name" Height="200" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
            <TextBlock Text="Enter Your Name" FontSize="18" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center"/>
            <TextBox x:Name="PlayerNameTextBox" Width="200" FontSize="24" HorizontalAlignment="Center" Margin="10" />
            <Button Content="OK" FontSize="20" Width="100" Height="40" HorizontalAlignment="Center" Click="OkButton_Click"/>
        </StackPanel>
    </Grid>
</Window>